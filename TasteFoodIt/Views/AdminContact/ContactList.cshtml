@model List<TasteFoodIt.Entity.Contact>
@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewBag.name Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">@ViewBag.name</li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.name İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">@ViewBag.name Tablosu</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>*</th>

                                <th>Konu</th>
                                <th>Email</th>
                                <th>Mesaj</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>Güncelle</th>
                                <th>Sil</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td><a href="#">@item.ContactId</a></td>

                                <td>@item.Subject</td>
                                <td>@item.Email</td>
                                <td>@item.Message.Substring(0, 25)....</td>
                                <td>
                                    <span class="badge badge-primary">@(((DateTime)item.SendDate).ToString("dd.MM.yyyy"))</span>

                                </td>
                                @if (item.IsRead == true)
                                {
                                    <td>
                                        <a href="/AdminContact/StatusChange/@item.ContactId">

                                            <span class="text badge badge-primary">okunmadı olarak işaretle</span>
                                        </a>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <a href="/AdminContact/StatusChange/@item.ContactId">

                                            <span class="text badge badge-dark">okundu olarak işaretle</span>
                                        </a>
                                    </td>
                                }
                                <td>
                                    <a href="/AdminContact/UpdateContact/@item.ContactId" class="btn btn-warning btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-info-circle"></i>
                                        </span>
                                        <span class="text">Detaylar</span>
                                    </a>
                                </td>
                                <td>
                                    <a href="/AdminContact/DeleteContact/@item.ContactId" class="btn btn-danger btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-trash"></i>
                                        </span>
                                        <span class="text">Sil</span>
                                    </a>
                                </td>
                            </tr>
                            }


                        </tbody>
                    </table>
                    
                </div>

                <div class="card-footer"></div>
            </div>
        </div>
    </div>

    <!--Row-->


</div>

