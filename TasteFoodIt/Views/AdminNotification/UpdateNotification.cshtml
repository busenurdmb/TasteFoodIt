@model TasteFoodIt.Entity.Notification
@{
    ViewBag.Title = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}






<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewBag.name Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">@ViewBag.name</li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.name İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">@ViewBag.name Güncelleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.NotificationId)
                            <label> Açıklama</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

                            <label>icon</label>

                            @Html.TextBoxFor(x => x.NotificationIcon, new { @class = "form-control" })
                            <span class="text-danger">fas fa-file-alt text-white formatında</span>
                            <br />
                            <label>İcon Rengi</label>

                            @Html.TextBoxFor(x => x.IconCirleColor, new { @class = "form-control" })
                            <span class="text-danger">icon-circle bg-primary formatında</span>
                      </div>
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




