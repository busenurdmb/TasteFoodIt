@model List<TasteFoodIt.Entity.Slider>
@{
    ViewBag.Title = "SliderList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewBag.name Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">@ViewBag.name</li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.name İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">@ViewBag.name</h6>
                </div>
               
                <div class="card-body">
                    @if (Model.Count == 0)
                    {
                        <div class="alert alert-info" role="alert">
                            <h4 class="alert-heading">Hakkımda kısmında bir veri bulunmamaktadır!</h4>
                        </div>
                        }
                    @if (Model.Count == 3)
                    {
                        <button href="/AdminSlider/CreateSlider" class="btn btn-primary" disabled >Hakkımda Kısmına veri ekle</button>
                    }
                    else
                    {
                        <a href="#" class="btn btn-primary">Hakkımda Kısmına veri ekle</a>
                    }
                   
                </div>
              <div class="alert alert-light alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">Uyarıyı kapat</span>
                        </button>
                        <h6><i class="fas fa-exclamation-triangle"></i><b> Bilgi!</b></h6>
                        Tema bütünlüğünün bozulmaması için 3 veriden başka veri giremenize izin verilmez.
                    </div>

                    

                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th>*</th>
                                    <th>Slider Başlığı</th>
                                    <th>Slider Açıklaması</th>
                                    <th>Fotoğraf</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><a href="#">@item.SliderID</a></td>
                                        <td>@item.Title</td>
                                        <td>@item.Title2....</td>
                                        <td>
                                            <img style="width:180px; height: 140px;" src="@item.ImageUrl" alt="@item.ImageUrl" class="img-thumbnail">
                                        </td>
                                        <td>
                                            <a href="/AdminSlider/DeleteSlider/@item.SliderID" class="btn btn-danger btn-icon-split">
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-trash"></i>
                                                </span>
                                                <span class="text">Sil</span>
                                            </a>
                                        </td>
                                        <td><a href="/AdminSlider/UpdateSlider/@item.SliderID" class="btn btn-sm btn-success">Güncelle</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>

                    </div>
                

                <div class="card-footer"></div>
            </div>
        </div>
    </div>

    <!--Row-->


</div>



