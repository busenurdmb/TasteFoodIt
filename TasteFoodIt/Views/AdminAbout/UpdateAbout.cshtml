@model TasteFoodIt.Entity.About
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewBag.name Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">@ViewBag.name</li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.name İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">@ViewBag.name Güncelleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.AboutID)
                            <label for="exampleCategory">Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <label for="exampleCategory"> Açıklama</label>
                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })


                            <label>Mevcut Görsel</label>
                            <label>
                                <span>@Model.ImageUrl</span>
                            </label>
                            <br />
                            <img style="width: 20%; height: 20%;" src="@Model.ImageUrl" alt="@Model.ImageUrl" class="img-thumbnail">
                            <br />
                            <div class="form-group col-lg-12">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="customFile" name="ImageUrl" value="@Model.ImageUrl" onchange="updateFileName(this)">
                                    <label class="custom-file-label" for="customFile">
                                        <span>@Model.ImageUrl</span>
                                    </label>
                                </div>
                            </div>

                        </div>
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Templates/ruang-admin/js/demo/choosefileswritecript.js"></script>
