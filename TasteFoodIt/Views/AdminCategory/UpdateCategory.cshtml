@model TasteFoodIt.Entity.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Kategori Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">Kategoriler</li>
            <li class="breadcrumb-item active" aria-current="page">Kategori İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Form Basic</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                            @*@Html.HiddenFor(x=>x.CategoryId)*@

                            <label for="exampleCategory">Kategori Adı</label>
                            <input type="text" name="CategoryName" value="@Model.CategoryName" />
                            @*@Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })*@

                        </div>
                        <button type="submit" class="btn btn-primary">Kategori Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

