@model List<TasteFoodIt.Entity.Product>
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewBag.name Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Anasayfa</a></li>
            <li class="breadcrumb-item">@ViewBag.name</li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.name İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12 mb-4">

            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">@ViewBag.name Tablosu</h6>
                    <a href="/AdminProduct/CreateProduct" class="btn btn-primary">Yeni Ürün Girişi</a>
                </div>

                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>*</th>
                                <th>Yemek Adı</th>
                                <th>Açıklama</th>
                                <th>Fiyat</th>
                                <th>Kategori</th>
                                <th>Resim</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td><a href="#">@item.ProductId</a></td>
                                <td>@item.ProductName</td>
                                <td>@item.Description</td>
                                <td>@item.Price</td>
                                <td>@item.Category.CategoryName</td>
                                <td>
                                    <img @*style="width: 50%; height: 50%;"*@ src="@item.ImageUrl" alt="@item.ImageUrl" class="img-thumbnail">
                                </td>
                                @if (item.IsActive == bool.Parse("true"))
                                {
                                    <td>
                                        <a href="#" class="btn btn-success btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-check"></i>
                                            </span>
                                            <span class="text">@item.IsActive</span>
                                        </a>


                                    </td>
                                }
                                @if (item.IsActive == bool.Parse("false"))
                                {
                                    <td>
                                        <a href="#" class="btn btn-dark btn-icon-split">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-exclamation-circle"></i>
                                            </span>
                                            <span class="text">@item.IsActive</span>
                                        </a>
                                    </td>
                                }
                                <td>
                                    <a href="/AdminProduct/DeleteProduct/@item.ProductId" class="btn btn-danger btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-trash"></i>
                                        </span>
                                        <span class="text">Sil</span>
                                    </a>
                                </td>
                                <td>
                                    <a href="/AdminProduct/UpdateProduct/@item.ProductId" class="btn btn-warning btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-info-circle"></i>
                                        </span>
                                        <span class="text">Güncelle</span>
                                    </a>
                                </td>

                            </tr>
                            }


                        </tbody>
                    </table>
                    
                </div>


                <div class="card-footer"></div>

            </div>
        </div>
    </div>

    <!--Row-->
    

</div>

